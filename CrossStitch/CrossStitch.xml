<effect>
<name>Cross-stitch Shader</name>
<author>asker</author>
<description>Pixelate with a cross-stitch pattern</description>
<parameter>
		<name>Stitch Width</name>
		<code>stitchWidth</code>
		<description>Width of one cross-stitch in pixels</description>
		<type>int</type>
		<property>edit</property>
		<value>1.0</value>
</parameter>
<parameter>
		<name>Stitch Height</name>
		<code>stitchHeight</code>
		<description>Height of one cross-stitch in pixels</description>
		<type>int</type>
		<property>edit</property>
		<value>1.0</value>
</parameter>
<parameter>
		<name>Pattern Image</name>
		<code>patternImg</code>
		<description>Pattern to use for the cross-stitches</description>
		<type>image</type>
		<property>image</property>
</parameter>
<parameter>
		<name>Pattern Width</name>
		<code>patternWidth</code>
		<description>Number of cross-stitches along X-axis in pattern</description>
		<type>int</type>
		<property>edit</property>
		<value>2</value>
</parameter>
<parameter>
		<name>Pattern Height</name>
		<code>patternHeight</code>
		<description>Number of cross-stitches along Y-axis in pattern</description>
		<type>int</type>
		<property>edit</property>
		<value>2</value>
</parameter>
<parameter>
		<name>Shadow Distance</name>
		<code>shadowDistance</code>
		<description>Distance to sample shadow from</description>
		<type>float</type>
		<property>edit</property>
		<value>0.2</value>
</parameter>
<parameter>
		<name>Shadow Opacity</name>
		<code>shadowOpacity</code>
		<description>Shadow</description>
		<type>float</type>
		<property>edit</property>
		<value>1.0</value>
</parameter>
<sampler>
	<index>1</index>
	<addressU>Wrap</addressU>
	<addressV>Wrap</addressV>
</sampler>
</effect>
