<effect>
<name>Card3D - Foil</name>
<author>asker</author>
<description>Rotate a card in 3D with one of two foil effects - v1.0</description>
<parameter>
		<name>X Rotation</name>
		<code>fX</code>
		<description>X Rotation in degrees</description>
		<type>float</type>
		<property>edit</property>
		<value>0.0</value>
</parameter>
<parameter>
		<name>Y Rotation</name>
		<code>fY</code>
		<description>Y Rotation in degrees</description>
		<type>float</type>
		<property>edit</property>
		<value>0.0</value>
</parameter>
<parameter>
		<name>Z Rotation</name>
		<code>fZ</code>
		<description>Z Rotation in degrees</description>
		<type>float</type>
		<property>edit</property>
		<value>0.0</value>
</parameter>
<parameter>
		<name>Distance</name>
		<code>fDist</code>
		<description>Simulated distance of camera (i.e. FOV)</description>
		<type>float</type>
		<property>edit</property>
		<value>1.0</value>
</parameter>
<parameter>
		<name>Zoom</name>
		<code>fZoom</code>
		<description>Camera zoom</description>
		<type>float</type>
		<property>edit</property>
		<value>1.0</value>
</parameter>
<parameter>
		<name>Foil Type</name>
		<code>foilType</code>
		<description>0: No Foil, 1: Pattern Foil, 2: Color Foil. Remember to set a pattern image for pattern foil</description>
		<type>int</type>
		<property>edit</property>
</parameter>
<parameter>
		<name>Foil Magnitude</name>
		<code>foilMagnitude</code>
		<description>Foil effect is scaled by this value</description>
		<type>float</type>
		<property>edit</property>
		<value>1.0</value>
</parameter>
<parameter>
		<name>Pattern Image</name>
		<code>patternImg</code>
		<description>Pattern to use when applying the foil in pattern mode</description>
		<type>image</type>
		<property>image</property>
</parameter>
<parameter>
		<name>One-sided Foil</name>
		<code>oneSided</code>
		<description>Enable to only apply foil effect to the front of the card</description>
		<type>bool</type>
		<property>checkbox</property>
		<value>0</value>
</parameter>
<sampler>
	<index>0</index>
	<filter>linear</filter>
	<filter>linear</filter>
	<addressU>Border</addressU>
	<addressV>Border</addressV>
	<BorderColor>0</BorderColor>
</sampler>
</effect>